<div class="page_title">
  <h2>A.C.GARDY Members</h2>
</div>

<div class="list_main">
<table class="simple_table">
  <tr>
    <th>Id</th>
    <th>Number</th>
    <th>Name en</th>
    <th>Name ja</th>
    <th>Name ja yomi</th>
    <th>Join date</th>
    <th>Comment</th>
    <th>Status</th>
    <th></th>
    <th></th>
    <!--<th></th>-->
  </tr>

<% @members.each do |member| %>
  <tr>
    <td><%= member.id %></td>
    <td><%= member.number %></td>
    <td><%= member.name_en %></td>
    <td><%= member.name_ja %></td>
    <td><%= member.name_ja_yomi %></td>
    <td><%= member.join_date %></td>
    <td><%= member.comment %></td>
    <td><%= @member_status[member.status] %></td>
    <td><%= link_to '詳細', member %></td>
    <td><%= link_to '編集', edit_member_path(member) %></td>
    <!--<td><%= link_to '削除', member, method: :delete, data: { confirm: '本当に削除してよい?' } %></td>-->
  </tr>
<% end %>
</table>
<br />

<%= link_to 'メンバ新規登録', new_member_path %>
</div>
