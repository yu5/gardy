<%= form_for(@schedule) do |f| %>
  <% if @schedule.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@schedule.errors.count, "error") %> prohibited this schedule from being saved:</h2>

      <ul>
      <% @schedule.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :kick_date %> (開催日)<br />
    <%= f.date_select :kick_date, :order => [ :year, :month, :day ], :use_month_numbers => true, :locale => 'ja' %>
  </div>
  <div class="field">
    <%= f.label :start_time %> (開始時刻)<br />
    <%= f.time_select :start_time %>
  </div>
  <div class="field">
    <%= f.label :end_time %> (終了時刻)<br />
    <%= f.time_select :end_time %>
  </div>
  <div class="field">
    <%= f.label :place %> (場所)<br />
    <%= f.text_field :place %>
  </div>
  <div class="field">
    <%= f.label :title %> (タイトル)<br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :contents %> (内容)<br />
    <%= f.text_area :contents %>
  </div>
  <div class="field">
    <%= f.label :open_flag %> (スケジュール公開フラグ)<br />
    <%= f.check_box :open_flag %>
  </div>
  <div class="field">
    <%= f.label :register %> (登録者)<br />
    <%= f.text_field :register %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
